<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.finalassignment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/afterLogin"
        android:name="com.example.finalassignment.AfterLogin"
        android:label="fragment_after_login"
        tools:layout="@layout/fragment_after_login" >
        <action
            android:id="@+id/action_afterLogin_to_wrappingFragment"
            app:destination="@id/wrappingFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.finalassignment.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_afterLogin"
            app:destination="@id/afterLogin" />
    </fragment>
    <fragment
        android:id="@+id/wrappingFragment"
        android:name="com.example.finalassignment.WrappingFragment"
        android:label="fragment_wrapping"
        tools:layout="@layout/fragment_wrapping" >
        <action
            android:id="@+id/action_wrappingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>